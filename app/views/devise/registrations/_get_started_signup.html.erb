
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :id=>'get_started_signup') do |f| %>
  <%= devise_error_messages! %>
	<table >
		<tr id="registration"><td><%= f.label :email %></td><td><%= f.email_field :email %></td></tr>
		<tr id="registration"><td><%= f.label :password %></td><td> <%= f.password_field :password %></td></tr>
		<tr id="registration"><td><%= f.label :password_confirmation %></td><td> <%= f.password_field :password_confirmation %></td></tr>
		<tr><td></td><td></td></tr>
		<tr id="registration" class="select_np_signup" style="display:none"><td><label>Select a Non Profit</label></td><td><%= select_tag :non_profit, options_from_collection_for_select(NonProfit.all, "id", "name") %></td></tr>
	</table>
	

  	<div id="sign_in_button">
  		<a href="#" class="button" id="sign_up_next">Next</a>
  		<%= f.submit "Sign up", :id=>'button', :class=> 'button sign_up_confirm', :style=>"display:none" %>
  	</div>
<% end %>

