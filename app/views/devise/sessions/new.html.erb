<div id='img_dog' style="float: right;width: 300px"> 
	<%= image_tag 'login_dog.jpg'%>

</div>

<h2 class="registration_h2">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'registration_form') do |f| %>
  	<%= devise_error_messages! %>
	<table>
		<tr id="registration"><td><%= f.label :email %></td><td><%= f.email_field :email %></td></tr>
		<tr id="registration"><td><%= f.label :password %></td><td> <%= f.password_field :password %></td></tr>
		<!-- <tr><td></td><td>
			<% if devise_mapping.rememberable? -%>
     			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
 	 		<% end -%></td></tr>
		-->
	</table>
	 

  <div id="sign_in_button"><%= f.submit "Sign in", :id=>'button', :class=> 'button' %></div>
<% end %>
<div id="sign_in_links" style="float:left;">
	<%= render "links" %>
</div>
