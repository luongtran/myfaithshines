<h2 class="registration_h2">Forgot your password?</h2>


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
	<table>
		<tr id="registration"><td><%= f.label :email %>:</td><td><%= f.email_field :email %></td></tr>
	</table>
	
  	<div id="sign_in_button">
  		<%= f.submit "Send me reset password instructions", :id=>'button', :class=> 'button' %>
  	</div>
<% end %>

